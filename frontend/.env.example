# FILE: /AutoStudio/frontend/.env.example
# DESCRIPTION: Frontend (Next.js) environment variables
# USAGE: Copy to .env.local and fill in actual values

# ============================================
# APPLICATION
# ============================================
NEXT_PUBLIC_APP_NAME=AutoStudio.AI
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:4000

# ============================================
# AUTHENTICATION
# ============================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-min-32-chars

# Google OAuth
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ============================================
# STRIPE (Public Keys)
# ============================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# ============================================
# CLOUDFLARE R2 (Public URL for videos)
# ============================================
NEXT_PUBLIC_CDN_URL=https://videos.autostudio.ai

# ============================================
# WEBSOCKET (for real-time updates)
# ============================================
NEXT_PUBLIC_WS_URL=ws://localhost:4000

# ============================================
# ANALYTICS (optional)
# ============================================
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX
NEXT_PUBLIC_HOTJAR_ID=your-hotjar-id

# ============================================
# FEATURE FLAGS
# ============================================
NEXT_PUBLIC_ENABLE_COLLABORATION=true
NEXT_PUBLIC_ENABLE_BLOCKCHAIN_PROOF=true
NEXT_PUBLIC_ENABLE_CRYPTO_PAYMENTS=true
NEXT_PUBLIC_ENABLE_LEADERBOARD=true

# ============================================
# PRICING DISPLAY
# ============================================
NEXT_PUBLIC_PLAN_FREE_PRICE=0
NEXT_PUBLIC_PLAN_STARTER_PRICE=19
NEXT_PUBLIC_PLAN_PRO_PRICE=49
NEXT_PUBLIC_PLAN_ENTERPRISE_PRICE=Custom
NEXT_PUBLIC_PLAN_PARTNER_PRICE=99

# ============================================
# BLOCKCHAIN (for public proof viewer)
# ============================================
NEXT_PUBLIC_POLYGON_EXPLORER=https://polygonscan.com
NEXT_PUBLIC_BLOCKCHAIN_VIEWER_URL=https://proof.autostudio.ai

# ============================================
# AI MODELS (for UI display)
# ============================================
NEXT_PUBLIC_VIDEO_MODELS=Runway Gen-2,Stability AI,Veo 3
NEXT_PUBLIC_SCRIPT_MODELS=GPT-4 Turbo,Claude 3.5,Gemini 1.5
NEXT_PUBLIC_VOICE_MODELS=ElevenLabs,OpenAI TTS

# ============================================
# SUPPORT & LINKS
# ============================================
NEXT_PUBLIC_SUPPORT_EMAIL=support@autostudio.ai
NEXT_PUBLIC_DOCS_URL=https://docs.autostudio.ai
NEXT_PUBLIC_STATUS_URL=https://status.autostudio.ai
NEXT_PUBLIC_DISCORD_URL=https://discord.gg/autostudio